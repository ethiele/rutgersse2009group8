<Window x:Class="CRySTALManager.EditMenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Menu Item" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0">Product ID</Label>
        <Label Grid.Row="1">Name</Label>
        <Label Grid.Row="2">Category</Label>
        <Label Grid.Row="3">Subcategory</Label>
        <Label Grid.Row="4">Description</Label>
        <Label Grid.Row="5">Price</Label>
        <Label Grid.Row="6">Served During</Label>
        
        <Label Name="m_PID" Grid.Row="0" Grid.Column="1">0</Label>
        <TextBox Name="m_name" Grid.Row="1" Grid.Column="1"></TextBox>
        <ComboBox Name="m_catagory" Grid.Row="2" Grid.Column="1" IsEditable="True"></ComboBox>
        <ComboBox Name="m_subcat" Grid.Row="3" Grid.Column="1" IsEditable="True"></ComboBox>
        <TextBox Name="m_des" Grid.Row="4" Grid.Column="1" AcceptsReturn="True"></TextBox>

    </Grid>
</Window>
